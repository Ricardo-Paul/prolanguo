{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    // generate dts declaration files
    "declaration": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}