{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "es2017",
    "module": "commonjs",
    "noImplicitReturns": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "bin",
    "rootDir": "src",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"],
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}   