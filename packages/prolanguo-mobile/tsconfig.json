{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./artifacts",
    "rootDir": "src",
    "sourceMap": true,
    // generate dts declaration files
    "declaration": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
, "src/App.tsx", "src/App.tsx"  ]
}